
def change_return(cost,given):
    change = abs(cost - given)
    if change == 0:
        "No change needed."
        return
    owed = change

    dollars = change // 1
    change -= dollars
   
    quarters = change // .25
    change -= quarters * .25

    dimes = change // .1
    change -= dimes * .1

    nickels = change // .05
    change -= nickels * .05

    pennies = change // .01
    
    print(f"The person paying is owed ${owed:.2f} which can be payed with {int(dollars)} Dollars, {int(quarters)} Quarters, {int(dimes)} Dimes, {int(nickels)} Nickels, and {int(pennies)} Pennies.")



print(change_return(17.25,16.89))
    
